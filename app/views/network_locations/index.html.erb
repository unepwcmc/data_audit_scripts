<h1>Listing network_locations</h1>

<table>
  <thead>
    <tr>
      <th>Path</th>
      <th>Drive</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @network_locations.each do |network_location| %>
      <tr>
        <td><%= network_location.path %></td>
        <td><%= network_location.drive_id %></td>
        <td><%= link_to 'Show', network_location %></td>
        <td><%= link_to 'Edit', edit_network_location_path(network_location) %></td>
        <td><%= link_to 'Destroy', network_location, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Network location', new_network_location_path %>
